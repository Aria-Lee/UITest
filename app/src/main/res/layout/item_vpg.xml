<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/root_vpg_item">

    <androidx.viewpager.widget.ViewPager android:layout_width="match_parent"
                                          android:layout_height="200dp"
                                          app:layout_constraintTop_toTopOf="parent"
                                          app:layout_constraintStart_toStartOf="parent"
                                          app:layout_constraintEnd_toEndOf="parent" android:id="@+id/vpg"
                                          android:background="@android:color/black">

    </androidx.viewpager.widget.ViewPager>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/vpg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal" android:id="@+id/rdtgp" app:layout_constraintHorizontal_bias="0.5">
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rdt1" android:layout_weight="1"
                android:button="@drawable/sp_banner_guide_node_ckecked_false"
                android:buttonTint="@color/vpg_guide"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rdt2" android:layout_weight="1"
                android:button="@drawable/sp_banner_guide_node_ckecked_false" android:layout_marginStart="8dp"
                android:buttonTint="@color/vpg_guide"/>
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>